<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChaosMap_V4.MainPage"
             Title="Hackerspaces Map">

    <CollectionView ItemsSource="{Binding Features}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10" BackgroundColor="LightGray" Margin="5">
                    <Label Text="{Binding properties.name}" FontAttributes="Bold" FontSize="Medium" />
                    <Label Text="{Binding properties.address}" FontSize="Small" />
                    <Label Text="{Binding properties.city}" FontSize="Small" />
                    <Label Text="{Binding properties.url}" TextColor="Blue" FontSize="Small" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>

</ContentPage>
