<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChaosMap"
    xmlns:views="clr-namespace:ChaosMap.Views"
    x:Class="ChaosMap.AppShell"
    Title="ChaosMap">

    <!-- Hauptseite zuerst -->
    <ShellContent
        Title="Start"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Detailseite bleibt versteckt -->
    <ShellContent
        Title="Details"
        ContentTemplate="{DataTemplate views:DetailPage}"
        Route="DetailPage"
        IsVisible="False" />

</Shell>