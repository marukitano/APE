<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChaosMap.Views.DetailPage"
             Title="Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Image x:Name="LogoImage" HeightRequest="150" />

            <Label x:Name="NameLabel" FontAttributes="Bold" FontSize="24"/>
            <Label x:Name="StatusLabel" FontAttributes="Bold"/>
            <Label x:Name="ValidationLabel" FontAttributes="Italic"/>

            <Label Text="Adresse:" FontAttributes="Bold"/>
            <Label x:Name="AddressLabel"/>

            <Label Text="E-Mail:" FontAttributes="Bold"/>
            <Label x:Name="EmailLabel"/>

            <Label Text="Telefon:" FontAttributes="Bold"/>
            <Label x:Name="PhoneLabel"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>